extends layout/main

block variables
	-var title = 'listing'

block content
	.main
		include modules/header/header
		.container 
			ul.breadcrumbs
				+breadcrumbs-item('Home ','href')
				+breadcrumbs-item(' > Hand Sanitizing')
			.flex-wrap.w-100
				.filter
					h3.filter_title Filters
					.select_filter
						.select_item.align-items-center
							p Brands
							img(src='img/common/arrow-down.svg' alt='icon arrow down')
						.select_drop
							label
								input(type='checkbox' class='checkbox')
								span.check
								span Ansell
									span.count_brand (2)
							label
								input(type='checkbox' class='checkbox')
								span.check
								span Cardinal Health
									span.count_brand (5)
				.listing
					h2.listing_title Hand Sanitizing
					.flex-end-between
						p.c-gray 26 items
						.align-items-center
							p.fs-14 Sort by
							.select
								select
									option(value='Select Category' disabled selected) Featured
									option(value='Featured 1') Featured 1
					.flex-wrap.items
						-var n = 12
						while (n--)
							.card
								a.card_name(href="#")
									img(src='https://medicalmegaimgs.net/prod/uploaded/product/159907855915375725325f50009f9b40e.jpg' alt='Ansel Latex Exam Gloves, Medium Box of 150')
									span Ansel Latex Exam Gloves, Medium Box of 150
								div
									.flex-center-center.calc
										button.btn-calc.btn-calc_minus(type="button" disabled)
										input.calc-qty(type="number" value="1")
										button.btn-calc.btn-calc_plus(type="button")
									button.btn.btn_dark(type="button")
										span $150.00 | Add to Cart



							


