extends layout/main

block variables
	-var title = 'pdp'

block content
	.main
		include modules/header/header
		.container 
			ul.breadcrumbs
				+breadcrumbs-item('Home ','href')
				+breadcrumbs-item(' > Hand Sanitizing','href')
				+breadcrumbs-item(' > Face Mask, 3 Ply, Ear Loop Box of 50')
			.flex-wrap.w-100.justify-content-between  
				.col_left.flex-wrap 
					.side_one
						.slider-nav
							.slide 
								img(src='' alt='image 1')
							.slide 
								img(src='' alt='image 2')
						.trustpilot trustpilot
					
					.side_two
						.slider-for
							.slide 
								img(src='' alt='image 2')
						p.text-small.text-center Image shown for reference purposes only. Actual product appearance may vary.
				.col_right 
					.range 
						.flex-center-between.fs-12 
							p 
								span.c-gray Your Order: 
								| $15.00
							p.text-up 
								span.c-red.fw-semi $135.00 
								| left for free shipping
						.range_slider
							span
					.product_content.justify-content-between 
						.col_mid
							h2.title Face Mask, 3 Ply, Ear Loop Box 
								span.text-nowrap of 50
							ul.list 
								li 
									| Sold By: 
									span.fw-semi Box of 50
								li 
									| Item Number: 
									span.fw-semi MK-3PL
								li 
									| Manufacturer: 
									span.fw-semi Generica
						.product_sidebar
							.align-items-center 
								img(src='' alt='icon shipping')
								div 
									p.c-red.text-up.fw-semi.l-t-02 Estimated shipping
									p.c-gray 2-3 business days*
							.line


